{
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "dist",
  	"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
		"target": "es5",
		"lib": ["es2017"],
		"typeRoots": ["node_modules/@types"],
		"types": ["node"],
		"preserveConstEnums": true,
		"noImplicitAny": false,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
